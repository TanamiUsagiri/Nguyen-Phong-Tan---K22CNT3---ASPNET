            {
                <span style="color:green"> Hoạt Động </span>
            }
            else
            {
                <span style="color:red"> Không Hoạt Động </span>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.NptId }) |
            @Html.ActionLink("Details", "Details", new { id = item.NptId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.NptId })
        </td>
    </tr>
}

</table>
